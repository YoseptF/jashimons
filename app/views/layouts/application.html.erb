<!DOCTYPE html>
<html>
  <head>
    <title>Jashimons</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/042baba16c.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Lilita+One&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %> animated fadeOut delay-2s"><%= message %></div>
      <% end %>
    <div class="container-fluid">
      <div class="row">
        <%= render  "shared/nav" %>
        <%= render  "shared/sidebar" %>
        <div class="col-11 mainContent">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
