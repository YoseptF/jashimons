<%= form_with model: @mascot do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :message, "Message" %>
  <%= f.text_area :message %>
  <%= f.label :price_money, "Price" %>
  <%= f.number_field :price_money, in: 1..20, step: 1 %>
  <%= f.label :price_points, "Points" %>
  <%= f.number_field :price_points, in: 1..20, step: 1 %>
  <%= f.label :animations, "Animations" %>
  <%= f.file_field :animations, multiple: true, direct_upload: true %>
  <%= f.submit %>
<% end %>
